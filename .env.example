# =====================================================
# GPS App Environment Variables Example
# Copia este archivo a .env y personaliza los valores
# =====================================================

# DATABASE CONFIGURATION
PGHOST=localhost
PGPORT=5432
PGDATABASE=gps_app_db
PGUSER=postgres
PGPASSWORD=password123
PGSSLMODE=disable

# JWT CONFIGURATION
JWT_SECRET=tu-clave-secreta-super-segura-cambiar-en-produccion
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# SERVER CONFIGURATION
PORT=3001
NODE_ENV=development

# CORS CONFIGURATION
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# LOG LEVEL
LOG_LEVEL=info

# ADMIN USER (for seeding)
ADMIN_USER=admin
ADMIN_PASS=admin123

# FEATURES
ENABLE_SWAGGER=true
ENABLE_METRICS=true
